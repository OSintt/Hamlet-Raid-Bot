{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,  // Opci√≥n que puede ayudar a evitar algunos errores de tipo
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
